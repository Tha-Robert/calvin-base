{
    "description": "Acess to Cameras on stations are given to users with attribute camerahandler. Actors signed by Ericsson allowed.",
    "rule_combining": "permit_overrides", 
    "target":{
        "subject":{
            "actor_signer":["AdafruitCS"]
        },
        "action":{
            "requires":["runtime","calvinsys.media.camerahandler"]
        }
    },
    "rules": [
        {
            "id": "camera rule",
            "description":"Permit if policy target matches", 
            "effect": "permit",
            "condition":{
                "function":"and",
                "attributes":[
                    {
                        "function":"equal",
                        "attributes":["attr:subject:sensors",["camerahandler"]]
                    }
                ]
            }
        }
    ] 
}
