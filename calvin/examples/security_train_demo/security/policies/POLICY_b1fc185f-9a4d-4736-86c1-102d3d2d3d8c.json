{
    "description": "Access to RFID readers are give to everyone with attribute rfid. Only actors signed by Adafruit allowed ",
    "rule_combining": "permit_overrides", 
    "target":{
        "subject":{
            "actor_signer":["AdafruitCS"]
        },
        "action":{
            "requires":["calvinsys.media.rfid"]
        }
    },
    "rules": [
        {
            "id": "rfid rule",
            "description":"Permit if policy target matches", 
            "effect": "permit",
            "condition":{
                "function":"and",
                "attributes":[
                    {
                        "function":"equal",
                        "attributes":["attr:subject:sensors",["rfid"]]
                    }
                ]
            }
        }
    ] 
}
